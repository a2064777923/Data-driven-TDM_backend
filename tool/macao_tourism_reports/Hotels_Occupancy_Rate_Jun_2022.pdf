	<script type="text/javascript">
	$(document).ready(function() {
		$(document).on('click', '.link-block', function(){
			var __url = $(this).data('url');
			if (__url !== '' && __url !== '-') {
				//window.open(__url, '_blank');
				$.blockUI({ message: '<span class= "BlockUI-MsgBox">載入中, 請等待 ...</span>' });
				window.location.href = __url;
			}
			else if (__url === '-') {
				return false;
			}
			else {
				BootstrapDialog.show({
					title: 'Message',
					message: 'Coming Soon ...'
				});
				return false;
			}
		});
		
		/* Footer Button Event */
		$(document).on('click', '.FooterBtn', function(event){
			var __url = $(this).attr('href');
			
			if (__url !== '#') {
				return true;
			}
			else {
				event.preventDefault();
				
				var __content = $(this).data('content');
				
				var dialog = new BootstrapDialog({
				//BootstrapDialog.show({
					title: $(this).html(),
					size: 'size-wide',
					nl2br: $(this).data('nl2br'),
					//message: $('#Footer span.' + __content).html()
					message: $('span.' + __content).html(),
					onshown: function(dialogRef){
						$('div.bootstrap-dialog-message form.form-horizontal button.FormSelectAllBtn').on('click', function (event) {
							var __opt_group = $('div.bootstrap-dialog-message form.form-horizontal input[name=SelectSubscriptionOption]')
							__opt_group.prop('checked', true);
							__opt_group.trigger('change');
						});
						$('div.bootstrap-dialog-message form.form-horizontal button.FormCancelAllBtn').on('click', function (event) {
							var __opt_group = $('div.bootstrap-dialog-message form.form-horizontal input[name=SelectSubscriptionOption]')
							__opt_group.prop('checked', false);
							__opt_group.trigger('change');
						});
						$('div.bootstrap-dialog-message form.form-horizontal input[name=SelectSubscriptionOption]').on('change', function (event) {
							var __tmp = 0;
							$('div.bootstrap-dialog-message form.form-horizontal input[name=SelectSubscriptionOption]:checked').each(function() {
								__tmp += $(this).val();
							});
							if (__tmp > 0) {
								$('div.bootstrap-dialog-message form.form-horizontal #SelectSubscriptionOptionVal').prop('checked', true);
							}
							else {
								$('div.bootstrap-dialog-message form.form-horizontal #SelectSubscriptionOptionVal').prop('checked', false);
							}
							$('div.bootstrap-dialog-message form.form-horizontal').validator();
						});
						$('div.bootstrap-dialog-message form.form-horizontal #CountryOrRegion').on('change', function (event) {
							$('div.bootstrap-dialog-message form.form-horizontal #CountryOrRegion option[name=CountryOrRegionNull]').remove();
							$('div.bootstrap-dialog-message form.form-horizontal #CountryOrRegionOptionVal').prop('checked', true);
							$('div.bootstrap-dialog-message form.form-horizontal').validator();
						});
						$('div.bootstrap-dialog-message form.form-horizontal #IndustryType').on('change', function (event) {
							$('div.bootstrap-dialog-message form.form-horizontal #IndustryType option[name=IndustryTypeNull]').remove();
							$('div.bootstrap-dialog-message form.form-horizontal #IndustryTypeOptionVal').prop('checked', true);
							$('div.bootstrap-dialog-message form.form-horizontal').validator();
						});
						$('div.bootstrap-dialog-message form.form-horizontal').validator().on('submit', function (event) {
							if (event.isDefaultPrevented()) {
								
							} else {
								//alert ('act');
								var __dataObj = new Object();
								__dataObj.Email = $('div.bootstrap-dialog-message form.form-horizontal #Email').val();
								//__dataObj.EmailConfirm = $('div.bootstrap-dialog-message form.form-horizontal #EmailConfirm').val();
								__dataObj.FirstName = $('div.bootstrap-dialog-message form.form-horizontal #FirstName').val();
								__dataObj.LastName = $('div.bootstrap-dialog-message form.form-horizontal #LastName').val();
								__dataObj.Organization = $('div.bootstrap-dialog-message form.form-horizontal #Organization').val();
								__dataObj.IndustryType = $('div.bootstrap-dialog-message form.form-horizontal #IndustryType').val();
								__dataObj.CountryOrRegion = $('div.bootstrap-dialog-message form.form-horizontal #CountryOrRegion option:selected').val();
								__dataObj.SubscriptionLanguage = $('div.bootstrap-dialog-message form.form-horizontal #SubscriptionLanguage option:selected').val();
								var __tmp = new Array();
								$('div.bootstrap-dialog-message form.form-horizontal input[name=SelectSubscriptionOption]:checked').each(function() {
									__tmp.push($(this).val());
								});
								__dataObj.SelectSubscriptionOption = __tmp.join(',');
								
								var __postData = JSON.stringify(__dataObj);
								//alert (__postData);
								
								//return false;
								
								$.ajax({
									type: 'json',
									dataType: 'json',
									contentType: 'application/json; charset=utf-8',
									url: '/Subscription/Subscript',
									data: __postData,
									success: function(data) {
										//alert (data.Message);
										BootstrapDialog.show({
											title: '',
											message: data.Message
										});
										if (data.Success === true) {
											dialog.close();
										}
									}
								});
								
								return false;
							}
						});
					}
				});
				dialog.open();
			}
		});
		
